{
  "name": "state-use",
  "version": "3.0.1",
  "description": "Simple state manager for React",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "sideEffect": false,
  "scripts": {
    "test": "jest",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --project ./tsconfig.json",
    "build:esm": "tsc --project ./tsconfig.esm.json",
    "release": "np"
  },
  "files": [
    "lib/*"
  ],
  "author": "hrsh7th",
  "keywords": [
    "React",
    "state",
    "immer",
    "immutable"
  ],
  "repository": {
    "url": "https://github.com/hrsh7th/state-use",
    "type": "github"
  },
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": true
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.+(ts|tsx|js)"
    ]
  },
  "peerDependencies": {
    "immer": ">= 9.0.0",
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^7.0.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.17",
    "jest": "^27.0.6",
    "np": "^7.5.0",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  }
}
