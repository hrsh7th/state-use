{
  "name": "state-use",
  "version": "5.0.0",
  "description": "Simple state manager for React",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "sideEffect": false,
  "scripts": {
    "test": "jest",
    "build": "npm run build:cjs && npm run build:esm && npm run build:dts",
    "build:dts": "tsc --project ./tsconfig.json --emitDeclarationOnly",
    "build:cjs": "MODULES=cjs babel --out-dir ./lib/cjs --extensions=.ts,.tsx src",
    "build:esm": "MODULES=esm babel --out-dir ./lib/esm --extensions=.ts,.tsx src",
    "release": "npm run build && np"
  },
  "files": [
    "lib/*"
  ],
  "author": "hrsh7th",
  "keywords": [
    "React",
    "state",
    "immer",
    "immutable"
  ],
  "repository": {
    "url": "https://github.com/hrsh7th/state-use",
    "type": "github"
  },
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.+(ts|tsx|js)"
    ]
  },
  "peerDependencies": {
    "immer": ">= 9.0.0",
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.17",
    "babel-jest": "^27.0.6",
    "core-js": "^3.16.2",
    "jest": "^27.0.6",
    "np": "^7.5.0",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.3.5"
  }
}
